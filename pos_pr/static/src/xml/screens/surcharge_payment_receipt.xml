<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="SurchargePaymentReceiptScreen" owl="1">
         <div class='surcharge-receipt-screen screen'>
            <div class='screen-content'>
                <div class='top-content'>
                    <div class="button next" t-att-class="{ highlight: !locked }"
                        t-on-click="orderDone">
                        New Order <i class="fa fa-angle-double-right"></i>
                    </div>
                </div>
                <div class="full-content">
                    <button class="button print" t-on-click="printReceipt">
                        <i class='fa fa-print'></i> Print Receipt</button>
                        <div class="pos-payment-receipt-container touch-scrollable scrollable-y">
                            <div id="pos_payment_receipt_container" t-ref="order-receipt"/>
                        </div>
                </div>
            </div>
        </div>
    </t>
</templates>