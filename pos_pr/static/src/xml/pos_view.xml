<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="BtnRegisterPayment">
        <div class="control-button">Payment Register</div>
    </t>

    <t t-name="InvoiceScreenPaymentRegister">
        <div class="pos-payment-register screen">
            <div id="js_pos_payment_register_screen"/>
        </div>
    </t>

    <t t-name="InvoiceScreenPaymentListScreen">
        <div class="pos-invoice-payment-list screen">
            <div id="js_payment_list_placeholder"/>
        </div>
    </t>

      <t t-name="PaymentRegisterButton" owl="1">
        <div class="ticket-button" t-att-class="{ highlight: props.isTicketScreenShown }" t-on-click="onClick">
            <div>Payment Register</div>
        </div>
    </t>


    <t t-name="PaymentRegisterScreen" t-inherit="point_of_sale.Chrome" t-inherit-mode="extension" owl="1">
        <xpath expr="//img[hasclass('pos-logo')]" position="after">
             <PaymentRegisterButton isTicketScreenShown="isTicketScreenShown"/>
        </xpath>
    </t>

</templates>